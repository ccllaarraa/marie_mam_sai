{# @var craft \craft\web\twig\variables\CraftVariable #}
{% if getenv('ENVIRONMENT') != "local" %}
    {% set manifest = craft.app.config.general.manifest %}
{% endif %}

{% set defaultJpgQuality = 60 %}
{% set retinaJpgQuality = 40 %}
{% set mobileJpgQuality = 40 %}

{# used for expertPortrait #}
{% set transformThumbExpertPortraitx2 = {
    mode: 'crop',
    width: 70 * 2,
    height: 70 * 2,
    quality: retinaJpgQuality,
    format: 'jpg',
    position: 'center center'
} %}

{# used in related entries #}
{% set transformThumbBigx2 = {
    mode: 'crop',
    width: 160 * 2,
    height: 160 * 2,
    quality: retinaJpgQuality,
    format: 'jpg'
} %}

{% set transformCarrouselx2 = {
    mode: 'fit',
    height: 360 * 2,
    quality: retinaJpgQuality,
    format: 'jpg'
} %}

{% set transformFullx1 = {
    mode: 'fit',
    width: 1440,
    quality: defaultJpgQuality,
    format: 'jpg'
} %}

{% set transformFullx2 = {
    mode: 'fit',
    width: 1440 * 2,
    quality: retinaJpgQuality,
    format: 'jpg'
} %}

{% set transformFullMobilex2 = {
    mode: 'fit',
    width: 375 * 2,
    quality: mobileJpgQuality,
    format: 'jpg'
} %}

{% set transformFullTabletx2 = {
    mode: 'fit',
    width: 750 * 2,
    quality: mobileJpgQuality,
    format: 'jpg'
} %}


{% set transformHalfx1 = {
    mode: 'fit',
    width: 1440 / 2,
    quality: retinaJpgQuality,
    format: 'jpg'
} %}

{% set transformHalfx2 = {
    mode: 'fit',
    width: 1440 / 2 * 2,
    quality: retinaJpgQuality,
    format: 'jpg'
} %}

{% set transformHalfTabletx2 = {
    mode: 'fit',
    width: 750 / 2 * 2,
    quality: mobileJpgQuality,
    format: 'jpg'
} %}

{% set transformHalfMobilex2 = {
    mode: 'fit',
    width: 375 / 2 * 2,
    quality: mobileJpgQuality,
    format: 'jpg'
} %}

{# used on _project_header.twig #}
 {% set transformFullCroppedMobilex2 = {
     mode: 'crop',
     width: 375 * 2,
     height: 300 * 2,
     quality: mobileJpgQuality,
     format: 'jpg'
 } %}


  {% set transformFullCroppedTabletx2 = {
      mode: 'crop',
      width: 375 * 2 * 2,
      height: 300 * 2 * 2,
      quality: mobileJpgQuality,
      format: 'jpg'
  } %}

